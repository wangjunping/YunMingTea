<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imcore.yunmingtea"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.imcore.yunmingtea.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppBaseTheme" >
        </activity>
        <activity
            android:name="com.imcore.yunmingtea.ui.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.imcore.yunmingtea.ui.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.imcore.yunmingtea.ui.ProductActivity"
            android:label="@string/title_activity_product" >
        </activity>
        <activity
            android:name="com.imcore.yunmingtea.ui.HotActivity"
            android:label="@string/title_activity_hot" >
        </activity>
        <activity
            android:name="com.imcore.yunmingtea.ui.InformationActivity"
            android:label="@string/title_activity_information" >
        </activity>
        <activity
            android:name="com.imcore.yunmingtea.ui.ContactActivity"
            android:label="@string/title_activity_contact" >
        </activity>
        <activity
            android:name="com.imcore.yunmingtea.ui.DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="com.imcore.yunmingtea.ui.ProducatDetailActivity"
            android:label="@string/title_activity_producat_detail" >
        </activity>
        <activity
            android:name="com.imcore.yunmingtea.ui.PackagingActivity"
            android:label="@string/title_activity_packaging" >
        </activity>
    </application>

</manifest>